set(SIERRA_PLATFORM_WINDOWS FALSE)
set(SIERRA_PLATFORM_LINUX FALSE)
set(SIERRA_PLATFORM_macOS FALSE)
set(SIERRA_PLATFORM_ANDROID FALSE)
set(SIERRA_PLATFORM_iOS FALSE)
set(SIERRA_PLATFORM_APPLE FALSE)

set(SIERRA_PLATFORM "")
set(SIERRA_PLATFORM_UNKNOWN FALSE)

if(WIN32)
    set(SIERRA_PLATFORM "Windows")
    set(SIERRA_PLATFORM_WINDOWS TRUE)
    list(APPEND SIERRA_PLATFORM_CMAKE_FILE_PATHS Windows/Windows.cmake)
    list(APPEND SIERRA_PLATFORM_CMAKE_FILE_PATHS Android/Android.cmake)
elseif(APPLE)
    if(${CMAKE_SYSTEM_NAME} STREQUAL "Darwin")
        set(SIERRA_PLATFORM "macOS")
        set(SIERRA_PLATFORM_macOS TRUE)
        list(APPEND SIERRA_PLATFORM_CMAKE_FILE_PATHS macOS/macOS.cmake)
    elseif(${CMAKE_SYSTEM_NAME} STREQUAL "iOS")
        set(SIERRA_PLATFORM "iOS")
        set(SIERRA_PLATFORM_iOS TRUE)
        list(APPEND SIERRA_PLATFORM_CMAKE_FILE_PATHS iOS/iOS.cmake)
    endif()
elseif(UNIX)
    if(${CMAKE_SYSTEM_NAME} STREQUAL "Linux")
        set(SIERRA_PLATFORM "Linux")
        set(SIERRA_PLATFORM_LINUX TRUE)
        list(APPEND SIERRA_PLATFORM_CMAKE_FILE_PATHS Linux/Linux.cmake)
        list(APPEND SIERRA_PLATFORM_CMAKE_FILE_PATHS Android/Android.cmake)
    elseif(${CMAKE_SYSTEM_NAME} STREQUAL "Android")
        set(SIERRA_PLATFORM "Android")
        set(SIERRA_PLATFORM_ANDROID TRUE)
        list(APPEND SIERRA_PLATFORM_CMAKE_FILE_PATHS Android/Android.cmake)
    endif()
else()
    set(SIERRA_PLATFORM "Unknown")
    set(SIERRA_PLATFORM_UNKNOWN TRUE)
endif()

if(SIERRA_PLATFORM_macOS OR SIERRA_PLATFORM_iOS)
    set(SIERRA_PLATFORM_APPLE TRUE)
else()
    set(SIERRA_PLATFORM_APPLE FALSE)
endif()

foreach(ITEM ${SIERRA_PLATFORM_CMAKE_FILE_PATHS})
    include("${SIERRA_DIRECTORY_PATH}/cmake/${ITEM}")
endforeach()